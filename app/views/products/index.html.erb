
  

<div class="container tabla">

<p id="notice"><%= notice %></p>

<h1>Lista de Productos</h1>

<div class="table-responsive">
  <table class="table">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Imagen</th>
      <th>Precio</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.image %></td>
        <td><%= product.price %></td>
        <td><%= product.details %></td>
        <td><%= link_to 'Ver', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>

<br>

<button> <%= link_to 'Ingresar Nuevo Producto', new_product_path %></button>
</div>