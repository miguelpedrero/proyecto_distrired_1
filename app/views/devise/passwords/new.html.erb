<body class="container">
  
<div class="container tabla col-md-6 col-md-offset-3 text-center">

<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label(:email, "EMAIL", :class => "h4")%><br />
    <%= f.email_field :email, autofocus: true , :placeholder => "Escribir Correo", :class => "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Envíeme las instrucciones de contraseña de restablecimiento", :class => "btn btn-info btn-sm btn-block"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</body>
