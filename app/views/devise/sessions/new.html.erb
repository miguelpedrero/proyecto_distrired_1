<body class="container ">
  
<div class="tabla col-md-6 col-md-offset-3 img-rounded">

<h2 class="text-center">INGRESO DE USUARIO</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field ">
    <%= f.label :email,"CORREO ELECTRONICO", :class => "h4" %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Escribir Correo", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password,"CLAVE", :class => "h4"  %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Escribir Clave", :class => "form-control"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field h4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions ">
    <%= f.submit "INGRESAR", :class => "btn btn-info btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</body>
