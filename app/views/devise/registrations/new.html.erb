<body class="container">
  
<div class="tabla col-md-6 col-md-offset-3 img-rounded">

<h2 class="text-center h1"> <strong> REGISTRAR </strong> </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :role, "ROL", :class => "h4" %><br />
    <%= f.select(:role, [["Distribuidor"], ["Proveedor"], ["Administrador"], ["Cliente"]])%>
  </div>

  <div class="field">
    <%= f.label(:name, "NOMBRE", :class => "h4")%><br />
    <%= f.text_field :name, :placeholder => "Escribir Nombre", :required => "required", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :phone, "TELÉFONO", :class => "h4" %><br />
    <%= f.text_field :phone, :placeholder => "Escribir Teléfono" , :required => "required", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :address,"DIRECCIÓN", :class => "h4" %><br />
    <%= f.text_field :address, :placeholder => "Escribir Dirección", :required => "required", :class => "form-control" %>
  </div>
    <div class="field">
    <%= f.label :commune_id,"COMUNA", :class => "h4" %><br />
    <%= f.collection_select(:commune_id, Commune.all, :id, :name,{prompt: "Elegir Comuna"}, :class => "form-control")%>
  </div>

  <div class="field">
    <%= f.label :email,"CORREO ELECTRONICO", :class => "h4" %><br />
    <%= f.email_field :email, autofocus: true , :placeholder => "Escribir Correo", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password,"CLAVE", :class => "h4" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> MINIMO DE CARACTERES)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , :placeholder => "Escribir Clave", :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"CLAVE CONFIRMACION", :class => "h4" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirmar Clave" , :class => "form-control"%>
  </div>

<br><br>

  <div class="actions">
    <%= f.submit "REGISTRAR", :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>

</div>



</body>

